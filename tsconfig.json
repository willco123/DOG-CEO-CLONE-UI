{
  "compilerOptions": {
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "target": "ESNext",
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true,
    "files": true
  },

  "compileOnSave": true,
  "include": [
    "src/**/*",
    "src/components",
    "src/custom.d.ts",
    "src/globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist/**/*",
    "**/*.test.*",
    "**/__mocks__/*",
    "**/__tests__/*",
    "**/tests/*"
  ]
}

